@page "/Home"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
@using MudBlazor
@inject IDialogService DialogService

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OpenEmployeeDialog">Open Employee Form</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="OpenCustomerDialog" Class="m-5">Open  New Customer</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="OpenEditServiceDialog" Class="m-5">Open  New Customer</MudButton>

@code {
    private void OpenEmployeeDialog()
    {
        DialogService.Show<AddEmployee>();
    }  
    private void OpenCustomerDialog()
    {
        DialogService.Show<AddNewCustomer>();
    }
    private void OpenEditServiceDialog()
    {
        DialogService.Show<AddNewCategory>();
    }
}
